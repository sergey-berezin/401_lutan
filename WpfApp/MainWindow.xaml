<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--public string[] keys = { "neutral", "happiness", "surprise", "sadness", "anger", "disgust", "fear", "contempt" };-->

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Menu Height ="25" VerticalAlignment="Top" Grid.Row="0">
            <MenuItem Header="Load images" Click="LoadImagesCmd" VerticalAlignment="Stretch" BorderBrush="Black"/>
            <MenuItem Header="Analyze" Command="" VerticalAlignment="Stretch" BorderBrush="Black"/>
            <MenuItem Header="Cancel" Command="" VerticalAlignment="Stretch" BorderBrush="Black"/>
        </Menu>

        <TabControl Grid.Row="1">
            <TabItem>
                <TabItem.Header>
                    <TextBlock Margin="3">New</TextBlock>
                </TabItem.Header>
                <TabItem.Content>
                    <ListView x:Name="listNew" HorizontalAlignment="Stretch" VerticalAlignment="Top" ItemsSource="{Binding list_new}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="5" HorizontalAlignment="Stretch"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                    <Image Source="{Binding ImageBmp}" HorizontalAlignment="Stretch" VerticalAlignment="Top" Stretch="UniformToFill" />
                                    <TextBlock Text="{Binding FilePath}" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </TabItem.Content>
            </TabItem>
            <TabItem Name="tab_neutral">
                <TabItem.Header>
                    <TextBlock Margin="3">Neutral</TextBlock>
                </TabItem.Header>
                <TabItem.Content>
                    <ListView x:Name="listNeutral" HorizontalAlignment="Stretch" VerticalAlignment="Top" ItemsSource="{Binding list_neutral}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="5" HorizontalAlignment="Stretch"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                    <Image Source="{Binding SelectedItem.Image}" HorizontalAlignment="Stretch" VerticalAlignment="Top" Stretch="UniformToFill" />
                                    <TextBlock Text="{Binding SelectedItem.Info}" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Margin="3">Happiness</TextBlock>
                </TabItem.Header>
                <TabItem.Content>
                    <TextBlock Margin="3"></TextBlock>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Margin="3">Surprise</TextBlock>
                </TabItem.Header>
                <TabItem.Content>
                    <TextBlock Margin="3"></TextBlock>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Margin="3">Sadness</TextBlock>
                </TabItem.Header>
                <TabItem.Content>
                    <TextBlock Margin="3"></TextBlock>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Margin="3">Anger</TextBlock>
                </TabItem.Header>
                <TabItem.Content>
                    <TextBlock Margin="3"></TextBlock>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Margin="3">Disgust</TextBlock>
                </TabItem.Header>
                <TabItem.Content>
                    <TextBlock Margin="3"></TextBlock>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Margin="3">Fear</TextBlock>
                </TabItem.Header>
                <TabItem.Content>
                    <TextBlock Margin="3"></TextBlock>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Margin="3">Contempt</TextBlock>
                </TabItem.Header>
                <TabItem.Content>
                    <TextBlock Margin="3"></TextBlock>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Margin="3">All</TextBlock>
                </TabItem.Header>
                <TabItem.Content>
                    <TextBlock Margin="3"></TextBlock>
                </TabItem.Content>
            </TabItem>
        </TabControl>
        

    </Grid>
</Window>
